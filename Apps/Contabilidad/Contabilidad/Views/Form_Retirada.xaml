<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contabilidad.Views.Form_Retirada">

    <VerticalStackLayout Padding="20">
        <Label Text="Registrar Gasto" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="EntryCantidad" Placeholder="Cantidad (€)" Keyboard="Numeric" />
        <Entry x:Name="EntryCategoria" Placeholder="Categoría" />
        <Button Text="Guardar" Clicked="OnGuardarClicked" />
    </VerticalStackLayout>
</ContentPage>
