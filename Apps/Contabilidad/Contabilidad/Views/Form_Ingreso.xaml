<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contabilidad.Views.Form_Ingreso">

    <VerticalStackLayout Padding="20">
        <Label Text="Registrar Ingreso" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="MontoEntry" Placeholder="Monto" Keyboard="Numeric" />
        <DatePicker x:Name="FechaPicker" />
        <Button Text="Guardar" Clicked="OnGuardarClicked" />
    </VerticalStackLayout>
</ContentPage>