<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contabilidad.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Resumen Diario" FontSize="24" HorizontalOptions="Center" />

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
            <Label Text="Total Ingresos:" Grid.Row="0" Grid.Column="0" />
            <Label x:Name="LabelIngresos" Grid.Row="0" Grid.Column="1" />

            <Label Text="Total Gastos:" Grid.Row="1" Grid.Column="0" />
            <Label x:Name="LabelGastos" Grid.Row="1" Grid.Column="1" />
        </Grid>

        <Button Text="Registrar Ingreso" Clicked="OnRegistrarIngreso" />
        <Button Text="Registrar Retiro" Clicked="OnRegistrarRetiro" />
        <Button Text="Ver Calendario" Clicked="OnVerCalendario" />
    </VerticalStackLayout>

</ContentPage>
