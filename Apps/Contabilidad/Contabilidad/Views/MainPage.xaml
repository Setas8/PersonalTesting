<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contabilidad.Views.MainPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Saldo Actual" FontSize="24" HorizontalOptions="Center" />
        <Label x:Name="LabelSaldo" Text="€0.00" FontSize="18" HorizontalOptions="Center" />

        <Label Text="Recibos Fijos del Mes" FontSize="24" HorizontalOptions="Center" />
        <CollectionView x:Name="RecibosList" ItemsSource="{Binding RecibosFijos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Descripcion}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Registrar Ingreso" Clicked="OnRegistrarIngreso" />
        <Button Text="Registrar Retirada" Clicked="OnRegistrarRetirada" />
        <Button Text="Gestionar Recibos Fijos" Clicked="OnGestionarRecibos" />
    </VerticalStackLayout>
</ContentPage>
