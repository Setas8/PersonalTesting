<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegistroHorarioApp.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Registro de Jornadas" FontSize="24" HorizontalOptions="Center" />

        <Label Text="Horas trabajadas hoy:" FontSize="18"/>
        <Label x:Name="TotalHoursLabel" FontSize="22" TextColor="Blue" />

        <Label Text="Hora de inicio:" FontSize="18"/>
        <TimePicker x:Name="StartTimePicker"/>

        <Label Text="Hora de finalización:" FontSize="18"/>
        <TimePicker x:Name="EndTimePicker"/>

        <Button Text="Registrar" Clicked="OnSaveButtonClicked"/>

        <Label Text="Consultar registros por mes:" FontSize="18"/>
        <DatePicker x:Name="MonthPicker" DateSelected="OnMonthSelected"/>

        <Label Text="Consultar registros por semana (elige un día dentro de la semana):" FontSize="18"/>
        <DatePicker x:Name="WeekPicker" DateSelected="OnWeekSelected"/>

        <ListView x:Name="WorkLogListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                      Detail="{Binding FormattedDetails}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
