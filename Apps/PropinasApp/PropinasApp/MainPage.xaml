<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PropinasApp.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout Padding="10">
        <Label Text="Repartir propinas"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry x:Name="PropinaEntry"
               Placeholder="Introduce la cantidad de propinas"
               Keyboard="Numeric" />

        <Entry x:Name="EmpleadosEntry"
               Placeholder="Introduce el número de empleados"
               Keyboard="Numeric" />

        <Button Text="Repartir"
                Clicked="OnRepartirPropinasClicked" />

        <Label x:Name="ResultLabel"
               FontSize="18"                      
               VerticalOptions="StartAndExpand" />
    </StackLayout>
</ContentPage>

